pipeline {
  agent {
      label "gcp-agent"
  }
  stages {
    stage('setup') {
      steps {
          sh '''
          ./tf-wrapper.sh setup $BRANCH_NAME
          '''
        }
    }
  stages {
    stage('TF init') {
      steps {
          sh '''
          ./tf-wrapper.sh init $BRANCH_NAME
          '''
        }
    }
    stage('TF plan') {
      steps {
          sh '''
          ./tf-wrapper.sh plan $BRANCH_NAME
          '''
        }
    }
    stage('TF validate') {
      steps {
          sh '''
          ./tf-wrapper.sh validate $BRANCH_NAME $POLICY_REPO
          '''
        }
    }
    stage('TF apply') {
      steps {
          sh '''
          ./tf-wrapper.sh apply $BRANCH_NAME
          '''
        }
    }
  }
}
